{
  "name": "@forts/resilience4ts",
  "version": "0.0.0",
  "description": "Shared workspace",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "format": "prettier --write .",
    "test": "pnpm build && jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:ci": "pnpm build && jest --ci --coverage --passWithNoTests --reporters=\"default\" --reporters=\"jest-junit\"",
    "lint": "eslint packages --quiet --ext js,jsx,ts,tsx --ignore-pattern **/*.test.* ",
    "lint:fix": "eslint packages --ext .js,.jsx,.ts,.tsx --fix",
    "prettier": "prettier --check ./packages",
    "preinstall": "npx only-allow pnpm",
    "typecheck": "pnpm tsc -p ./tsconfig.lint.json --noemit --pretty",
    "prepare": "is-ci || husky install",
    "ci:publish": "pnpm --filter './packages/**' publish",
    "ci:version": "pnpm changeset version",
    "ci:prerelease": "pnpm --filter './packages/**' publish --tag next"
  },
  "engines": {
    "node": ">= 16.20.1",
    "npm": "forbidden, install pnpm",
    "pnpm": ">= 8.0.0"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "2.22.0",
    "@jest/types": "^29.5.0",
    "@types/cors": "2.8.12",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.0",
    "is-ci": "^3.0.1",
    "jest": "29.5.0",
    "jest-junit": "10.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^3.0.0",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "tslib": "2.5.0",
    "turbo": "^1.8.3",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{js,ts,tsx,md,scss,mdx}": "prettier --write"
  }
}
